<style>

    iframe {
        width:90%;
        height:90%;
        border: thin solid lightgray;
    }

</style>

<script>

    function inject(item) {
        let x = item;
        let y = (x.contentWindow || x.contentDocument);
        if (y.document) y = y.document;
        y.body.style.backgroundColor = "lightgreen";
    }

</script>


<iframe src="/api" id="meta" onload="inject(this)">
</iframe>
